generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FsNode {
  children FsNode[] @relation("FileSystem")
  createdAt DateTime @default(now())
  id Int @id @default(autoincrement())
  name String
  parent FsNode? @relation("FileSystem", fields: [parentId], references: [id])
  parentId Int?
  path String
  type FsNodeType @relation(fields: [typeId], references: [id])
  typeId Int
  @@unique([path, name])
}

model FsNodeType {
  id Int @id
  name String @unique
  nodes FsNode[]
}
